{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["vite/client", "node"]
  },
  "include": ["src", "api", "env.d.ts", "vite-env.d.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "netlify/functions"]
}
